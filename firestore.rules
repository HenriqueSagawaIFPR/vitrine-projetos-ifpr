rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para a coleção de comentários
    match /comments/{commentId} {
      // Permitir leitura de todos os comentários
      allow read: if true;
      
      // Permitir criação de comentários para todos (publicados imediatamente)
      allow create: if request.resource.data.keys().hasAll(['projectId', 'authorName', 'authorEmail', 'content', 'rating', 'createdAt', 'updatedAt', 'isApproved'])
        && request.resource.data.projectId is string
        && request.resource.data.authorName is string
        && request.resource.data.authorEmail is string
        && request.resource.data.content is string
        && request.resource.data.rating is number
        && request.resource.data.rating >= 1
        && request.resource.data.rating <= 5
        && request.resource.data.createdAt is timestamp
        && request.resource.data.updatedAt is timestamp
        && request.resource.data.isApproved is bool
        && request.resource.data.isApproved == true;
      
      // Permitir atualização apenas do próprio comentário (por email)
      allow update: if request.resource.data.authorEmail == resource.data.authorEmail
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['content', 'rating', 'updatedAt']);
      
      // Permitir exclusão apenas do próprio comentário (por email)
      allow delete: if resource.data.authorEmail == request.auth.token.email;
    }
    
    // Regras para outras coleções (se existirem)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
